<form action="/show">
  <label for="">name</label>
  <input type="text" name = 'name'>
  <button>submit</button>
</form>



<% @guests.each do |guest|%>
<p><%= guest.name %></p>
  <form action="/<%=guest.id%>" method='post'>
    <input type="hidden" name="_method" value="delete">
    <button >Delete</button>
  </form>
<% end %>
