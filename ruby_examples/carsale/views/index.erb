<h1>Carsale.cn</h1>


<a href="/addnew">List a car for sale</a>
<div class="arpt_tab">
    <table>
      <thead>
        <tr>
          <th scope="col">Reg.</th>
          <th scope="col">Type</th>
          <th scope="col">Manufacturer</th>
          <th scope="col">Model</th>
          <th scope="col">Make</th>
          <th scope="col">Price</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody>

    <%@allCars.each do |car|%>
          <%= "<tr>
                <td>
                  <strong class='book-title'>#{car['reg']}</strong></td>
                <td><span class='text-offset'>#{car['car_type']}</span></td>
                <td class='item-stock'>#{car['manufacturer']}</td>
                <td class='item-qty'>#{car['model']}</td>
                <td class='item-stock'>#{car['make']}</td>
                <td class='item-stock'>#{car['price']}</td>
                <td class='item-qty'><a href='/car_detail/#{car.id}'>View Detail</a></td>
              </tr>"%>
        <%end%>
      </tbody>
</table>
</div>
